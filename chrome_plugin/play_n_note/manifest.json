{
  "name": "Play-n-Note",
  "version": "0.1",
  "description": "Take Notes as you watch Coursera Videos. The video would be paused as the note is being taken. The video plays as the note is completed and the timestamp is saved. You can refer to your notes as these videos are played again.",
  "background": { 
    "scripts": [
      "chrome_ex_oauthsimple.js",
      "chrome_ex_oauth.js",
      "javascripts/bootstrap/bootstrap.js",
      "jquery.js",
      "jqueryui.js",
      "background.min.js",
      "javascripts/shownotes.min.js"
    ] 
  },
 "browser_action": {
    "default_title": "",
    "default_icon": "playnnote16.png",
    "default_popup": ""
  },
  "permissions" : [
    "tabs",
    "webNavigation",
    "activeTab",
    "storage",
    "http://playnnote.herokuapp.com/",
    "https://class.coursera.org/*",
    "https://www.googleapis.com/oauth2/v2/userinfo",
    "https://www.googleapis.com/auth/userinfo.profile",
    "https://www.googleapis.com/auth/drive",
    "https://www.googleapis.com/auth/drive.file",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken"
  ],
  "icons" : {
    "48" : "playnnote48.png",
    "128" : "playnnote128.png"
  },
  "manifest_version": 2
}
